<Window x:Class="Hotel.Views.NoAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Views"
        xmlns:ctx="clr-namespace:Hotel.ViewModels"
        xmlns:help="clr-namespace:Hotel.Utils"
        mc:Ignorable="d"
        Title="Hotel" Height="700" Width="1000"  WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <ctx:NoAccountViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FC814A"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10,10,10,10" Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding  Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"  Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding  VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FC814A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <help:TemplateSelector  x:Key="Selector"/>
        <DataTemplate x:Key="ListTemplate">
            <StackPanel Orientation="Horizontal" Background="Transparent">
                <TextBlock Text="{Binding RoomName}" HorizontalAlignment="Left" Width="240"/>
                <TextBlock Text="{Binding PricePerNight}" Width="150"/>
                <TextBlock Text="{Binding MaxOccupancy}" Width="100"/>
                <Image Source="{Binding Images[0].Image}" Width="200" Height="50"/>
                <Image Source="{Binding Images[1].Image}" Width="200" Height="50"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid Background="#F4E9CD">

        <Button HorizontalAlignment="Center" Height="150" Margin="0,20,0,0" VerticalAlignment="Top" Width="200" Background="Transparent" Cursor="Hand" Click="BackClick" Style="{StaticResource RoundedButtonStyle}">
            <Image  Source="../Assets/hotel.png"/>
        </Button>



        <Button Style="{StaticResource RoundedButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" Width="60" Cursor="Hand" BorderThickness="0" FontFamily="Segoe UI Black" FontWeight="Bold" FontSize="20" Height="60" Click="BackClick">
            <Image Source="../Assets/Back.png" />
        </Button>

        <Label Content="CheckIn" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Segoe UI Black" FontSize="20" Margin="200,70,0,0"/>
        <DatePicker HorizontalAlignment="Center" Height="50"  VerticalAlignment="Top" Width="200" FontFamily="Segoe UI Black" FontSize="20" BorderThickness="2" BorderBrush="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Margin="0,100,500,0" Background="Transparent"  SelectedDate="{Binding CheckIn}"/>

        <Label Content="CheckOut" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Segoe UI Black" FontSize="20" Margin="0,70,150,0"/>
        <DatePicker HorizontalAlignment="Right" Height="50"  VerticalAlignment="Top" Width="200" FontFamily="Segoe UI Black" FontSize="20" BorderThickness="2" BorderBrush="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,100,100,0" Background="Transparent" SelectedDate="{Binding CheckOut}"/>

        <Label Content="Room Name" FontFamily="Segoe UI Black" FontSize="20" Margin="50,165,773,464" Width="200" Height="40"/>

        <Label Content="Price" FontFamily="Segoe UI Black" FontSize="20" Margin="282,165,615,466" Width="200" Height="40"/>

        <Label Content="Max Occupancy" FontFamily="Segoe UI Black" FontSize="15"  Margin="453,165,421,466" Height="40" Width="220"/>

        <Label Content="Image" FontFamily="Segoe UI Black" FontSize="20" Margin="700,165,198,466" Height="40"/>

        <ListBox HorizontalAlignment="Left" Height="430" VerticalAlignment="Top" Width="900" Margin="50,210,0,0" Background="Transparent" BorderBrush="Black" FontFamily="Segoe UI Black" FontSize="20" ItemsSource="{Binding Rooms}" ItemTemplateSelector="{StaticResource Selector}" SelectedItem="{Binding SelectedItemList}"/>

        <Button Style="{StaticResource RoundedButtonStyle}" Content="Search" HorizontalAlignment="Right" Margin="0,20,50,0" VerticalAlignment="Top" Width="300" Cursor="Hand" BorderThickness="0" Height="50" FontFamily="Segoe UI Black" FontWeight="Bold" FontSize="20" Command="{Binding SearchCommand}"/>

        

    </Grid>
</Window>
